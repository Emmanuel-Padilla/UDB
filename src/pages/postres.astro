---
import Layout from '~/layouts/PageLayout.astro';
import HeroText from '~/components/widgets/HeroText.astro';
import Prices from '~/components/widgets/Pricing.astro';
// import Features3 from '~/components/widgets/Features3.astro';
// import CallToAction from '~/components/widgets/CallToAction.astro';

const metadata = {
  title: 'Productos',
};
---

<Layout metadata={metadata}>
    <!-- HeroText Widget ******************* -->
  
    <HeroText
      tagline=""
      title="Postres"
      subtitle="Disfruta de nuestras galletas artesanales, horneadas con los mejores ingredientes para un sabor irresistible."
    />
  
    <Prices
    prices={[
      {
        title: "Tarta de frutas con praliné",
        subtitle: "Una combinación perfecta de crema suave, frutas frescas y un toque crujiente de praliné.",
        images: [{ src: "~/assets/images/productos/postres/tartadefrutas.webp", alt: "Tarta de frutas con praliné" }],
        price: 450,
        period: "",
        items: [
          { description: "Ideal para cumpleaños y reuniones familiares." },
        ],
        hasRibbon: false,
        ribbonTitle: "Más vendido"
      },
      {
        title: "Tarta de curd de limón",
        subtitle: "Una explosión de sabor cítrico con una textura cremosa y refrescante.",
        images: [{ src: "~/assets/images/productos/postres/tartadelimon.webp", alt: "Tarta de curd de limón" }],
        price: 500,
        period: "",
        items: [
          { description: "Elaborada con limón fresco y base de galleta crujiente." },
        ],
        hasRibbon: true,
        ribbonTitle: ""
      },
      {
        title: "Cubiletes",
        subtitle: "Pequeños bocados de masa crujiente rellenos de una suave crema de queso.",
        images: [{ src: "~/assets/images/productos/postres/cubiletes.webp", alt: "Cubiletes de queso" }],
        price: 550,
        period: "",
        items: [
          { description: "Textura esponjosa con un relleno cremoso." },
          { description: "Perfecto para acompañar con café o té." }
        ],
        hasRibbon: true,
        ribbonTitle: ""
      },
      {
        title: "Alfajor Argentino",
        subtitle: "Un dulce tradicional con relleno de dulce de leche y un toque de coco.",
        images: [{ src: "~/assets/images/productos/postres/alfajorargentino.webp", alt: "Alfajor Argentino" }],
        price: 450,
        period: "",
        items: [
          { description: "Doble capa de galleta rellena de dulce de leche." },
        ],
        hasRibbon: true,
        ribbonTitle: "Más vendido"
      },
      {
        title: "Empanadas de crema pastelera",
        subtitle: "Deliciosas empanadas rellenas de crema pastelera suave y dulce.",
        images: [{ src: "~/assets/images/productos/postres/empanadadecrema.webp", alt: "Empanadas de crema pastelera" }],
        price: 450,
        period: "",
        items: [
          { description: "Masa dorada y crujiente con un relleno suave y cremoso." },
          { description: "Perfectas para acompañar con café o té." }
        ],
        hasRibbon: true,
        ribbonTitle: "Más vendido"
      },
      {
        title: "Empanadas de piña y manzana",
        subtitle: "Una combinación de frutas dulces envuelta en una masa crujiente.",
        images: [{ src: "~/assets/images/productos/postres/empanadadepina.webp", alt: "Empanadas de piña y manzana" }],
        price: 500,
        period: "",
        items: [
          { description: "Relleno jugoso de piña y manzana." },
          { description: "Horneadas hasta lograr una textura dorada y crujiente." }
        ],
        hasRibbon: true,
        ribbonTitle: ""
      },
      {
        title: "Tartitas de piña",
        subtitle: "Mini tartas con un relleno jugoso de piña y una base crujiente.",
        images: [{ src: "~/assets/images/productos/postres/tartasdepina.webp", alt: "Tartitas de piña" }],
        price: 550,
        period: "",
        items: [
          { description: "Base de galleta con un relleno dulce de piña." },
        ],
        hasRibbon: false,
        ribbonTitle: "Recomendado"
      }
    ]}
  />
  