---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
  --aw-font-sans: 'Inter Variable';
  --aw-font-serif: 'Inter Variable';
  --aw-font-heading: 'Inter Variable';

  --aw-color-primary: rgb(92, 73, 66);
  --aw-color-secondary: rgb(91, 72, 65);
  --aw-color-accent: rgb(100, 82, 74);

  --aw-color-text-heading: rgb(92, 73, 66);
  --aw-color-text-default: rgb(16, 16, 16);
  --aw-color-text-muted: rgb(120, 100, 90);
  --aw-color-bg-page: rgb(240, 235, 230); /* Marrón claro */

  --aw-color-bg-page-dark: rgb(40, 30, 30); /* Marrón oscuro */

  ::selection {
    background-color: lavender;
  }
}

.dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(255, 255, 255); /* Blanco */
    --aw-color-secondary: rgb(130, 100, 90); /* Marrón medio */
    --aw-color-accent: rgb(170, 140, 120); /* Marrón cálido */

    --aw-color-text-heading: rgb(255, 255, 255); /* Blanco */
    --aw-color-text-default: rgb(226, 215, 205); /* Beige claro */
    --aw-color-text-muted: rgba(226, 215, 205, 0.66); /* Beige claro, translúcido */
    --aw-color-bg-page: rgb(92, 73, 66); /* Marrón oscuro */

    ::selection {
        background-color: rgb(130, 100, 90); /* Marrón medio */
        color: rgb(255, 255, 255); /* Blanco */
    }
}

</style>
