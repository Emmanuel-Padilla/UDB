---
import '@fontsource-variable/inter';
---

<style is:inline>
  :root {
  --aw-font-sans: 'Inter Variable';
  --aw-font-serif: 'Inter Variable';
  --aw-font-heading: 'Inter Variable';

  --aw-color-primary: rgb(92, 73, 66);
  --aw-color-secondary: rgb(91, 72, 65);
  --aw-color-accent: rgb(100, 82, 74);

  --aw-color-text-heading: rgb(92, 73, 66);
  --aw-color-text-default: rgb(16, 16, 16);
  --aw-color-text-muted: rgb(120, 100, 90);
  --aw-color-bg-page: rgb(255, 255, 255); 

  --aw-color-bg-page-dark: rgb(40, 30, 30); /* Marrón oscuro */

  ::selection {
    background-color: lavender;
  }
}

.dark {
    --aw-font-sans: 'Inter Variable';
    --aw-font-serif: 'Inter Variable';
    --aw-font-heading: 'Inter Variable';

    --aw-color-primary: rgb(232, 225, 218); /* Beige claro */
    --aw-color-secondary: rgb(200, 190, 210); /* Gris lavanda */
    --aw-color-accent: rgb(244, 180, 190); /* Rosa pastel */

    --aw-color-text-heading: rgb(255, 255, 255); /* Blanco */
    --aw-color-text-default: rgb(232, 225, 218); /* Beige claro */
    --aw-color-text-muted: rgba(200, 190, 210, 0.66); /* Gris lavanda translúcido */
    
    --aw-color-bg-page: rgb(30, 32, 40); /* Azul grisáceo oscuro */
    
    ::selection {
        background-color: rgb(190, 170, 240); /* Lavanda suave */
        color: rgb(30, 32, 40); /* Azul grisáceo oscuro */
    }
}

</style>
